import os
import pandas as pd

# Function to extract information from a PDF and return it as a dictionary
def extract_info_from_pdf(pdf_path):
    # Your existing code to extract info from a single PDF
    # Return the extracted information as a dictionary
    extracted_data = {}
    # Example structure of extracted data
    # extracted_data = {'key1': 'value1', 'key2': 'value2'}
    return extracted_data

# Directory containing PDF files
pdf_dir = 'path_to_your_pdf_folder'

# List to store all extracted data
all_data = []

# Loop through all PDF files in the folder
for filename in os.listdir(pdf_dir):
    if filename.endswith('.pdf'):
        pdf_path = os.path.join(pdf_dir, filename)
        extracted_data = extract_info_from_pdf(pdf_path)
        all_data.append(extracted_data)

# Convert the list of dictionaries to a DataFrame
df = pd.DataFrame(all_data)

# Save the DataFrame as a CSV file
output_csv_path = 'output.csv'
df.to_csv(output_csv_path, index=False)

print(f'Extracted data has been saved to {output_csv_path}')

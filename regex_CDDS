import re

# Raw text
raw_text = '-5.05 100p078.15'

# Extract the numerical part using regex
num_str = re.findall(r'\d+\.?\d*', raw_text)
formatted_number = ''.join(num_str)

# Convert to float and format with commas and dollar sign
formatted_number = float(formatted_number)
formatted_number_str = "${:,.2f}".format(formatted_number)

print(formatted_number_str)

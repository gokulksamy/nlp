import pandas as pd
import numpy as np

# Sample dataframe
data = {
    'A': ['hello', np.nan, 'foo'],
    'B': [np.nan, 'world', 'bar'],
    'C': ['!', '!', '!']
}
df = pd.DataFrame(data)

# Print the original dataframe
print("Original DataFrame:")
print(df)

# Get the first two rows
row1 = df.iloc[0]
row2 = df.iloc[1]

# Concatenate the strings, handling NaN values
concatenated_row = row1.combine_first(row2)
concatenated_row = concatenated_row.fillna('') + row2.fillna('')

# Replace the first row with the concatenated result
df.iloc[0] = concatenated_row

# Drop the second row
df = df.drop(1).reset_index(drop=True)

# Print the modified dataframe
print("\nModified DataFrame:")
print(df)
